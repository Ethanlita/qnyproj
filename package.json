{
  "name": "qnyproj",
  "version": "1.0.0",
  "description": "Full-stack project with OpenAPI-driven development",
  "private": true,
  "scripts": {
    "generate:openapi": "node scripts/generate-openapi.js",
    "copy:openapi": "node -e \"require('fs').copyFileSync('openapi.yaml', 'frontend/public/openapi.yaml')\"",
    "generate:frontend-api": "npm run generate:openapi && npm run copy:openapi && cd frontend && pnpm run generate-api",
    "dev:frontend": "npm run copy:openapi && cd frontend && pnpm run dev",
    "build:frontend": "npm run generate:frontend-api && cd frontend && pnpm run build",
    "deploy:backend": "cd backend && ./scripts/deploy-with-secrets.sh",
    "verify:openapi": "python3 scripts/verify-openapi-sync.py",
    "sync:secrets": "cd backend && node scripts/sync-secrets.js",
    "test:secrets": "cd backend && node scripts/test-secrets.js",
    "test:contract": "npx dredd",
    "test:contract:local": "npx dredd --endpoint=http://localhost:3000",
    "test:contract:prod": "npx dredd --endpoint=https://ds0yqv9fn816.execute-api.us-east-1.amazonaws.com/dev"
  },
  "dependencies": {
    "dredd": "^14.1.0",
    "js-yaml": "^4.1.0",
    "yaml": "^2.8.1"
  }
}
