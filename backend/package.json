{
  "name": "qnyproj-backend",
  "version": "1.0.0",
  "description": "Backend functions for Novel-to-Comics project",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:lib": "jest lib/",
    "test:functions": "jest functions/"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "lib/**/*.js",
      "functions/**/*.js",
      "!functions/**/node_modules/**",
      "!**/test/**",
      "!**/*.test.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    }
  },
  "devDependencies": {
    "dotenv": "^17.2.3",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "yaml": "^2.8.1"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/client-s3": "^3.0.0",
    "@aws-sdk/client-secrets-manager": "^3.0.0",
    "@aws-sdk/client-sqs": "^3.0.0",
    "@aws-sdk/lib-dynamodb": "^3.0.0",
    "ajv": "^8.12.0",
    "openai": "^4.77.0",
    "uuid": "^9.0.0"
  }
}
