{
  "name": "qnyproj-backend",
  "version": "1.0.0",
  "description": "Backend functions for Novel-to-Comics project",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:lib": "jest lib/",
    "test:functions": "jest functions/"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "lib/**/*.js",
      "!functions/**/node_modules/**",
      "!**/test/**",
      "!**/*.test.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "qwen-adapter\\.integration\\.test\\.js",
      "qwen-adapter\\.bible\\.test\\.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    }
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.913.0",
    "@aws-sdk/client-lambda": "^3.913.0",
    "@aws-sdk/client-sqs": "^3.913.0",
    "@aws-sdk/lib-dynamodb": "^3.913.0",
    "aws-sdk-client-mock": "^4.1.0",
    "dotenv": "^17.2.3",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "yaml": "^2.8.1"
  },
  "dependencies": {
    "@aws-sdk/client-cloudformation": "^3.913.0",
    "@aws-sdk/client-s3": "^3.0.0",
    "@aws-sdk/client-secrets-manager": "^3.0.0",
    "@aws-sdk/s3-request-presigner": "^3.913.0",
    "@aws-sdk/util-dynamodb": "^3.913.0",
    "ajv": "^8.12.0",
    "busboy": "^1.6.0",
    "fast-json-patch": "^3.1.1",
    "jpeg-js": "^0.4.4",
    "jsonrepair": "^3.13.1",
    "openai": "^4.77.0",
    "pdf-lib": "^1.17.1",
    "pngjs": "^7.0.0",
    "uuid": "^9.0.0"
  }
}
